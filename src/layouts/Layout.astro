---
import Container from '../components/Container.astro';

export interface Props {
    title: string
    contained: boolean
}

const { title, contained = true } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        {contained && <Container>
            <slot />
        </Container>}

        {!contained && <slot />}
    </body>
</html>
<style is:global>
    :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #da62c4 30%,
            white 60%
        );
    }
    html {
        font-family: 'Nunito', sans-serif;
        background-color: #eceff4;
        color: #4c566a;
    }
    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
            DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }

    .theme-button {
        @apply bg-polar-1 border-2 border-polar-3 px-3 py-1 rounded-full;
        position: relative;
        top: 0;
        left: 0;
        display: inline-block;
        transition: box-shadow 0.35s, top 0.3s, transform 0.45s;
        box-shadow: 1px 1px 0 0 #3b4252, 2px 2px 0 0 #3b4252,
            3px 3px 0 0 #3b4252;
    }

    .theme-button:hover {
        top: 3px;
        box-shadow: 0 0 0 0;
        transform: rotate(3deg);
    }

    .shadow {
        box-shadow: 2px 2px 0px 2px #3b4252;
    }

    .card {
        @apply border-2 border-polar-3 shadow;
    }
</style>
